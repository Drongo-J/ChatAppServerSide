<UserControl x:Class="ChatAppServerSide.Views.MessageUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ChatAppServerSide.Views"
             mc:Ignorable="d"
             Margin="10 0 0 0">
    <Border CornerRadius="0 10 10 10" Background="#68CFA3" Padding="10 7" HorizontalAlignment="Left" Margin="40 5 0 0">
        <TextBlock Text="{Binding Message, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" FontSize="14" Foreground="#ffffff" VerticalAlignment="Center" Margin="3 0 3 2"/>
    </Border>
</UserControl>
